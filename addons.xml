<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

	<addon id="plugin.program.update.tvguide" name="Update TV Guide" version="1.6.1" provider-name="@lpha">

		<requires>

			<import addon="xbmc.python" version="2.14.0"/>

			<import addon="script.module.pyxbmct" version="1.1.4"/>
			<import addon="script.module.beautifulsoup" version="3.2.1"/>

		</requires>

		<extension point="xbmc.python.pluginsource" library="addon.py">

			<provides>executable</provides>

		</extension>

		<extension point="xbmc.addon.metadata">

			<platform>all</platform>

			<summary lang="en">Project @lpha Update TV Guide Version 1.6.1</summary>

			<description lang="en">Updates the Renegades TV Guide</description>

			<license>GNU General Public License, v2</license>

			<language></language>

			<email>projectalpha@myway.com</email>

		</extension>

	</addon>

<addon id="repository.projectalpha" name="Project Alpha Repository" version="1.2" provider-name="@lpha">
	<extension point="xbmc.addon.repository" name="Project Alpha Addon Repository">
		<info compressed="false">https://raw.githubusercontent.com/pjalpha/repo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/pjalpha/repo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/pjalpha/repo/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Addons</summary>
		<description>Updates and Addons From Project @lpha</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.renegadestv" name="Project Alpha TV Guide" version="1.1.0" provider-name="Alpha, Antony, rayw1986, bluezed">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Renegades TV Guide fully working EPG</summary>
		<description lang="en">Project Alpha fully working EPG</description>
		<disclaimer lang="en">Project Alpha TV Guide is based on Renegades TV Guide by Antony and FTV Guide by Bluezed and RayW1986, which is based on the original TV Guide addon by twinther.</disclaimer>
		<language></language>
		<platform>all</platform>
		<license>GPLv2</license>
		<forum></forum>
		<website></website>
		<email></email>
		<source></source>
	</extension>
</addon>
</addons>
